---
import { cn } from '@/lib/utils';

interface Props {
  active?: string;
}

const { active } = Astro.props;

const navLinkStyles = 'relative text-sm text-muted-foreground px-3.5 py-1.5 transition-all duration-150 hover:text-foreground';
const navLinkActive = 'bg-card text-foreground border border-border -m-px';
---

<nav class="sticky top-0 z-50 flex items-center justify-between px-5 md:px-7 lg:px-12 py-5 bg-background/94 backdrop-blur-md border-b border-border">
  <a href="/" class="font-display font-semibold text-sm tracking-tight text-foreground magnetic">AB</a>
  
  <div class="hidden md:flex items-center gap-0.5 bg-muted border border-border p-1">
    <a 
      href="/#projects" 
      class={cn(navLinkStyles, (active === 'work' || active === 'projects') && navLinkActive)}
    >
      Work
    </a>
    <a 
      href="/#about" 
      class={cn(navLinkStyles, active === 'about' && navLinkActive)}
    >
      About
    </a>
    <a 
      href="/blog" 
      class={cn(navLinkStyles, active === 'writing' && navLinkActive)}
    >
      Writing
    </a>
  </div>
  
  <div class="flex items-center gap-3">
    <div class="hidden lg:flex items-center gap-2 font-mono text-xs tracking-widest text-muted-foreground">
      <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
      Open to Germany roles
    </div>
    
    <!-- Theme Toggle -->
    <button 
      id="theme-toggle"
      type="button"
      class="relative flex items-center justify-center w-10 h-10 rounded-full bg-muted hover:bg-accent transition-colors"
      aria-label="Toggle theme"
    >
      <!-- Sun icon -->
      <svg class="sun-icon absolute w-5 h-5 text-foreground transition-all duration-300 rotate-0 scale-100 dark:rotate-90 dark:scale-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="5"/>
        <line x1="12" y1="1" x2="12" y2="3"/>
        <line x1="12" y1="21" x2="12" y2="23"/>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
        <line x1="1" y1="12" x2="3" y2="12"/>
        <line x1="21" y1="12" x2="23" y2="12"/>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
      </svg>
      <!-- Moon icon -->
      <svg class="moon-icon absolute w-5 h-5 text-foreground transition-all duration-300 rotate-90 scale-0 dark:rotate-0 dark:scale-100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
      </svg>
    </button>
    
    <a 
      href="mailto:ameybhavsar10@gmail.com" 
      class="font-display font-medium text-sm bg-primary text-primary-foreground border border-primary px-4 py-2 transition-all duration-300 hover:-translate-y-px hover:shadow-lg hover:shadow-primary/20 active:translate-y-0 active:scale-[0.98] magnetic"
    >
      Get in touch
    </a>
  </div>
</nav>
