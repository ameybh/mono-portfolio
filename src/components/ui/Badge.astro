---
import { cn } from '@/lib/utils';

interface Props {
  variant?: 'default' | 'outline' | 'dark';
  size?: 'default' | 'sm';
  class?: string;
}

const { 
  variant = 'outline', 
  size = 'default',
  class: className,
} = Astro.props;

const baseStyles = 'inline-flex items-center font-mono uppercase tracking-wide transition-colors';

const variants = {
  default: 'border border-zinc-200 text-zinc-500 hover:border-zinc-500 hover:text-zinc-700',
  outline: 'border border-zinc-200 text-zinc-400 hover:border-zinc-400 hover:text-zinc-600',
  dark: 'border border-zinc-700 text-zinc-400 hover:border-zinc-500 hover:text-zinc-300',
};

const sizes = {
  default: 'px-2.5 py-1 text-xs',
  sm: 'px-2 py-0.5 text-[10px]',
};

const classes = cn(baseStyles, variants[variant], sizes[size], className);
---

<span class={classes}>
  <slot />
</span>
