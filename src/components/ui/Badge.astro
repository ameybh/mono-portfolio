---
import { cn } from '@/lib/utils';

interface Props {
  variant?: 'default' | 'outline' | 'dark';
  size?: 'default' | 'sm';
  class?: string;
}

const { 
  variant = 'outline', 
  size = 'default',
  class: className,
} = Astro.props;

const baseStyles = 'inline-flex items-center font-mono uppercase tracking-wide transition-colors';

const variants = {
  default: 'border border-border text-muted-foreground hover:border-muted-foreground hover:text-foreground',
  outline: 'border border-border text-muted-foreground hover:border-muted-foreground hover:text-foreground',
  dark: 'border border-border bg-muted text-muted-foreground hover:border-muted-foreground hover:text-foreground',
};

const sizes = {
  default: 'px-2.5 py-1 text-xs',
  sm: 'px-2 py-0.5 text-[10px]',
};

const classes = cn(baseStyles, variants[variant], sizes[size], className);
---

<span class={classes}>
  <slot />
</span>
