---
import { cn } from '@/lib/utils';

interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'default' | 'sm' | 'lg';
  href?: string;
  class?: string;
  magnetic?: boolean;
}

const { 
  variant = 'primary', 
  size = 'default',
  href,
  class: className,
  magnetic = false,
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center gap-2 font-display font-medium tracking-tight transition-all duration-300 ease-out focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50';

const variants = {
  primary: 'bg-primary text-primary-foreground border border-primary hover:-translate-y-0.5 hover:shadow-lg hover:shadow-primary/20 active:translate-y-0 active:scale-[0.98]',
  secondary: 'bg-transparent text-foreground border border-border hover:bg-muted hover:border-border hover:-translate-y-0.5 active:translate-y-0 active:scale-[0.98]',
  ghost: 'bg-transparent text-foreground hover:bg-muted',
};

const sizes = {
  default: 'px-6 py-3 text-sm',
  sm: 'px-4 py-2 text-xs',
  lg: 'px-8 py-4 text-base',
};

const classes = cn(baseStyles, variants[variant], sizes[size], magnetic && 'magnetic', className);

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
