---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/app.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  active?: string;
  image?: string;
  type?: string;
  publishedAt?: Date;
  modifiedAt?: Date;
}

const {
  title = 'Amey Bhavsar — Product Engineer · AI/ML',
  description = 'Product engineer with 3 years building AI/ML systems from scratch — video intelligence pipelines, multimodal models, and production microservices.',
  active,
  image = '/og-image.png',
  type = 'website',
  publishedAt,
  modifiedAt,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, 'https://ameybhavsar.com').toString();
const ogImageURL = new URL(image, 'https://ameybhavsar.com').toString();

// Person schema for all pages
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Amey Bhavsar",
  "jobTitle": "Software Development Engineer II",
  "description": "Product engineer with 3 years building AI/ML systems from scratch — video intelligence pipelines, multimodal models, and production microservices.",
  "url": "https://ameybhavsar.com",
  "image": "https://ameybhavsar.com/og-image.png",
  "sameAs": [
    "https://github.com/ameybh",
    "https://linkedin.com/in/amey-bhavsar"
  ],
  "worksFor": {
    "@type": "Organization",
    "name": "Tessact"
  },
  "knowsAbout": [
    "Artificial Intelligence",
    "Machine Learning",
    "PyTorch",
    "Python",
    "FastAPI",
    "React",
    "Next.js",
    "Video Intelligence",
    "Multimodal Models",
    "LLMs",
    "Computer Vision"
  ],
  "alumniOf": {
    "@type": "EducationalOrganization",
    "name": "University of Mumbai"
  }
};

// Website schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Amey Bhavsar",
  "url": "https://ameybhavsar.com",
  "description": "Portfolio of Amey Bhavsar, Product Engineer specializing in AI/ML systems.",
  "author": {
    "@type": "Person",
    "name": "Amey Bhavsar"
  }
};

// Build page-specific schema
let pageSchema: Record<string, unknown> | null = null;

if (type === 'article' && publishedAt) {
  pageSchema = {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": title,
    "description": description,
    "image": ogImageURL,
    "url": canonicalURL,
    "datePublished": publishedAt.toISOString(),
    "dateModified": modifiedAt?.toISOString() || publishedAt.toISOString(),
    "author": {
      "@type": "Person",
      "name": "Amey Bhavsar",
      "url": "https://ameybhavsar.com"
    },
    "publisher": {
      "@type": "Person",
      "name": "Amey Bhavsar",
      "logo": {
        "@type": "ImageObject",
        "url": "https://ameybhavsar.com/og-image.png"
      }
    }
  };
}
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content="Amey Bhavsar, Product Engineer, AI Engineer, ML Engineer, Software Engineer, PyTorch, FastAPI, React, Next.js, Video Intelligence, LLMs, Python" />
  <meta name="author" content="Amey Bhavsar" />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Theme color for Chrome/Android address bar and tab switcher -->
  <meta name="theme-color" content="#111111" media="(prefers-color-scheme: dark)" />
  <meta name="theme-color" content="#fafafa" media="(prefers-color-scheme: light)" />
  
  <!-- Apple mobile web app status bar style -->
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageURL} />
  <meta property="og:site_name" content="Amey Bhavsar" />
  <meta property="og:locale" content="en_US" />
  {publishedAt && <meta property="article:published_time" content={publishedAt.toISOString()} />}
  {modifiedAt && <meta property="article:modified_time" content={modifiedAt.toISOString()} />}
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@ameybhavsar" />
  <meta name="twitter:creator" content="@ameybhavsar" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageURL} />
  <meta name="twitter:image:alt" content={title} />
  
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  {pageSchema && <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />}
  
  <ClientRouter />
  
  <!-- Theme initialization script - runs before page render to prevent flash -->
  <script is:inline>
    (function() {
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.classList.toggle('dark', theme === 'dark');
      
      // Update theme-color meta tag for Chrome/Android
      const themeColor = theme === 'dark' ? '#111111' : '#fafafa';
      let metaThemeColor = document.querySelector('meta[name="theme-color"]');
      if (metaThemeColor) {
        metaThemeColor.setAttribute('content', themeColor);
        metaThemeColor.removeAttribute('media');
      }
    })();
  </script>
</head>
<body class="pt-[72px]">
  <Nav active={active} transition:persist />
  <main>
    <slot />
  </main>
  <Footer transition:persist />
  
  <script is:inline data-astro-rerun>
    // Microinteraction utilities - re-runs on every page navigation
    (function() {
      // Staggered reveal for lists
      const revealElements = document.querySelectorAll('.stagger-reveal');
      revealElements.forEach((el, i) => {
        el.style.setProperty('--stagger-index', String(i));
      });

      // Magnetic button effect
      const magneticElements = document.querySelectorAll('.magnetic');
      magneticElements.forEach(el => {
        if (el.dataset.magneticInit) return;
        el.dataset.magneticInit = 'true';
        
        el.addEventListener('mousemove', (e) => {
          const rect = el.getBoundingClientRect();
          const x = e.clientX - rect.left - rect.width / 2;
          const y = e.clientY - rect.top - rect.height / 2;
          el.style.transform = `translate(${x * 0.15}px, ${y * 0.15}px)`;
        });
        el.addEventListener('mouseleave', () => {
          el.style.transform = 'translate(0, 0)';
        });
      });
    })();
  </script>
  
  <!-- Theme toggle handler -->
  <script is:inline data-astro-rerun>
    (function() {
      const toggle = document.getElementById('theme-toggle');
      if (!toggle || toggle.dataset.themeInit) return;
      toggle.dataset.themeInit = 'true';
      
      toggle.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        document.querySelector('meta[name="theme-color"]')?.setAttribute('content', isDark ? '#111111' : '#fafafa');
      });
    })();
  </script>
  
  <!-- Smart navbar - hide on scroll down, show on scroll up -->
  <script is:inline data-astro-rerun>
    (function() {
      const nav = document.querySelector('nav');
      if (!nav || nav.dataset.scrollInit) return;
      nav.dataset.scrollInit = 'true';
      
      let lastScrollY = window.scrollY;
      let ticking = false;
      
      function updateNav() {
        const currentScrollY = window.scrollY;
        
        // Only trigger after scrolling past navbar height
        if (currentScrollY > 80) {
          if (currentScrollY > lastScrollY) {
            // Scrolling down - hide nav
            nav.style.transform = 'translateY(-100%)';
          } else {
            // Scrolling up - show nav
            nav.style.transform = 'translateY(0)';
          }
        } else {
          // At top - always show
          nav.style.transform = 'translateY(0)';
        }
        
        lastScrollY = currentScrollY;
        ticking = false;
      }
      
      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(updateNav);
          ticking = true;
        }
      }, { passive: true });
    })();
  </script>
  
  <!-- Instant navigation on mousedown for faster perceived performance -->
  <script is:inline data-astro-rerun>
    (function() {
      if (document.dataset.instantNavInit) return;
      document.dataset.instantNavInit = 'true';
      
      document.addEventListener('mousedown', (e) => {
        // Find closest anchor with data-instant
        const link = e.target.closest('a[data-instant]');
        if (!link) return;
        
        const href = link.getAttribute('href');
        if (!href || href.startsWith('#') || href.startsWith('http') || href.startsWith('mailto:')) return;
        
        // Don't interfere with special clicks (ctrl, cmd, shift, middle click)
        if (e.ctrlKey || e.metaKey || e.shiftKey || e.button !== 0) return;
        
        // Navigate immediately on mousedown
        e.preventDefault();
        window.location.href = href;
      }, { capture: true });
    })();
  </script>
</body>
</html>
