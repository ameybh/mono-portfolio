---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  backHref?: string;
  backLabel?: string;
  active?: string;
}

const {
  title,
  description,
  backHref = '/blog',
  backLabel = 'Back to writing',
  active,
} = Astro.props;
---
